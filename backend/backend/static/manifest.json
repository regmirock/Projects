{
  "manifest_version": 2,
  "name": "Secure Plus",
  "version": "2.0",
  "description": "My first extension",
  "browser_action": {
    "default_popup": "extlogin.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "http://localhost:8000/",
    "http://127.0.0.1:8000/"
  ],
  "host_permissions": [
    "http://localhost:8000/",
    "http://127.0.0.1:8000/"
  ],
  
  "content_security_policy": "script-src 'self' https://cdnjs.cloudflare.com https://yourdjangoapi.com; object-src 'self'"
}
